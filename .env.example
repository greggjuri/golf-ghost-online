# Golf Ghost Online - Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# AWS Configuration
# ===================
# Required for DynamoDB course storage (Lambda uses IAM role, not these)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB table name
DYNAMODB_COURSES_TABLE=golf-ghost-courses

# ===================
# API Configuration
# ===================
# API Gateway endpoint URL (set after deploying Lambda functions)
NEXT_PUBLIC_API_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/prod

# ===================
# Cognito Authentication
# ===================
# Run scripts/setup-cognito.sh to get these values
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# ===================
# Application
# ===================
# Public URL of the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Set to 'production' in production environment
NODE_ENV=development

# ===================
# S3 Deployment
# ===================
# S3 bucket for static site hosting
S3_BUCKET=ghost.jurigregg.com

# CloudFront distribution ID (for cache invalidation)
CLOUDFRONT_DISTRIBUTION_ID=

# ===================
# Optional
# ===================
# Enable debug logging
# DEBUG=true
